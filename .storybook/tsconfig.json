{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2017.object", "es5", "es6", "es2016"],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "rootDirs": ["src", "stories"],
    "jsx": "react",
    "types": ["cypress", "node", "react", "react-dom"],
    "baseUrl": "./src",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.*"]
}
