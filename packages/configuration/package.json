{
  "name": "@capsulajs/capsulahub-extension-configuration",
  "version": "0.0.1",
  "description": "Configuration service extension for CapsulaHub",
  "main": "lib/index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn build:dist && yarn build:lib",
    "build:dist": "rimraf dist && parcel build src/index.ts",
    "build:lib": "rimraf lib && tsc --outDir lib",
    "clean": "rimraf lib dist",
    "doc": "typedoc ./src/api --out ./doc --mode file --hideGenerator",
    "test": "NODE_ENV=test jest --maxWorkers=4 --env=jsdom --passWithNoTests",
    "lint": "yarn lint:md && yarn lint:ts",
    "lint:md": "remark . --rc-path ../../.remarkrc --output",
    "lint:ts": "tslint '{src,tests}/**/*.{ts,tsx}' --fix",
    "prettier": "prettier --write '{src,tests}/**/*.{ts,tsx}'"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "setupFiles": [
      "./tests/setupTests.ts"
    ],
    "testRegex": "/tests/implementations/.*.spec.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/src"
    ]
  },
  "dependencies": {
    "@capsulajs/capsulajs-configuration-service": "^0.1.6",
    "@capsulajs/capsulajs-transport-providers": "^0.1.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/jsdom": "^12.2.3",
    "@types/node": "^12.0.2",
    "cypress": "^3.3.0",
    "jest": "^24.8.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-wrapper": "^0.2.2",
    "ts-jest": "^24.0.2"
  }
}
