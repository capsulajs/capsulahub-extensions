{
  "name": "@capsulajs/web-components",
  "version": "0.0.1",
  "description": "Capsula JS - web components",
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "lerna run build",
    "start": "lerna run start",
    "lint": "lerna run lint",
    "test": "lerna run test --concurrency=1",
    "storybook": "start-storybook -p 6006"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capsulajs/web-components.git"
  },
  "author": "Capsula JS",
  "bugs": {
    "url": "https://github.com/capsulajs/web-components/issues"
  },
  "homepage": "https://github.com/capsulajs/web-components#readme",
  "devDependencies": {
    "@storybook/addon-actions": "v4.0.0-alpha.3",
    "@storybook/addons": "v4.0.0-alpha.3",
    "@storybook/react": "v4.0.0-alpha.3",
    "babel-core": "^6.26.2",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "husky": "^1.3.1",
    "lerna": "^3.13.2",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "ts-loader": "^6.0.0"
  },
  "dependencies": {
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-preset-lint-recommended": "^3.0.2",
    "rimraf": "^2.6.3"
  }
}
