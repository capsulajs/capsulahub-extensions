{
  "name": "@capsulajs/web-components",
  "version": "0.0.1",
  "description": "Capsula JS - web components",
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "lerna run build && node ./afterBuild.js --stream",
    "build-example": "lerna run build-example --stream",
    "start": "lerna run start --stream",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --concurrency=1 --stream",
    "storybook": "start-storybook -p 6006",
    "clean": "lerna run clean && rimraf node_modules"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capsulajs/web-components.git"
  },
  "author": "Capsula JS",
  "bugs": {
    "url": "https://github.com/capsulajs/web-components/issues"
  },
  "homepage": "https://github.com/capsulajs/web-components#readme",
  "devDependencies": {
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addons": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "@types/jest": "^24.0.13",
    "@types/node": "^11.13.6",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "@types/storybook__react": "^4.0.1",
    "babel-polyfill": "^6.26.0",
    "cypress": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lerna": "^3.13.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "react": "^16.0.0",
    "react-dom": "^16.8.6",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-preset-lint-recommended": "^3.0.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "http-server": "^0.11.1",
    "wrapper-webpack-plugin": "^2.1.0"
  }
}
